
  .wrap {
    display: block;
    background: #FFFFFF;
    font-size: 28rpx;
  }
  .item {
    width: 100%;
    flex-grow: 0;
    margin-bottom: 20rpx;
    border-bottom: #e9eaec;
    border-top: #e9eaec;
    border-width: 1rpx 0 1rpx 0;
    border-style: solid;
    background: white;
  }
  .user-image {
    width: 80rpx;
    height: 80rpx;
    margin-left: 35rpx;
    margin-top: 20rpx;
    border-radius:40rpx;
    box-shadow:0 0 4rpx #bfbfbf;
  }
  .user-name {
    margin-top: 20rpx;
    margin-left: 15rpx;
    font-size: 28rpx;
  }
  .comment {
    width: 90%;
    margin-top: 20rpx;
    margin-bottom: 5rpx;
    margin-left: 5%;
    letter-spacing: 2rpx;
    line-height: 34rpx;
    font-weight: 200;
  }
  .exhibits {
    width: 90%;
    background: #000000;
    margin-left: 35rpx;
    margin-top: 10rpx;
    border-radius: 9rpx;
    box-shadow: 0 0 4rpx #bfbfbf;
  }
  .circle {
    height: 300rpx;
  }
  .exhibits:active{
    box-shadow: 0 0 10rpx #999999;
  }
  .exhibits-image {
    width: 130rpx;
    height: 180rpx;
    background: #334433;
    margin-left: 20rpx;
    margin-top: 20rpx;
    margin-bottom: 12rpx;
    border-radius: 2rpx;
    box-shadow: 0 0 4rpx #333333;
  }
  .normal-font {
    font-size: 28rpx;
  }
  .label {
    margin-left: 15rpx;
  }
  .class-label {
    margin-top: 20rpx;
    margin-right: 60rpx;
    border-radius: 10rpx;
  }
  .circle-label {
    margin-right: 20rpx;
    border-radius: 10rpx;
  }
  .bottom {
    margin-left: 20rpx;
    margin-top: 15rpx;
    margin-bottom: 30rpx;
  }
  .button-class {
    margin-top: 10rpx;
    margin-left: 20rpx;
  }
  .anli-button {
    margin-top: 10rpx;
    margin-right: 60rpx;
  }
  .popup__content {
    width: 100%;
    height: 300rpx;
    line-height: 500rpx;
    background: #ffffff;
  }
  .popup-button {
    text-align: center;
  }
  .popup-button:active {
    background: #ECECEC;
  }
  .tool {
    width: 100%;
    background: #ffffff;
    margin-bottom: : 20rpx;
  }
  .tool-label {
    margin-left: 20rpx;
    margin-bottom: 10rpx;
  }
