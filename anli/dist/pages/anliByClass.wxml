
  <view class="wrap">
    <wxc-flex class="wrap" dir="top">
      <view class="item side">
        <view class="user-info"> 
          <wxc-panel border="{{false}}">
            <wxc-cc>
              <view>
                <image class="user-pic" src="https://s11.mogucdn.com/p2/170413/upload_86dkh4e886991g9lji7a6g5c530ji_400x400.jpg" mode="aspectFit"/>
                <view class="user-name">{{classname}}</view>
              </view>
            </wxc-cc>
          </wxc-panel>
        </view>
      </view>
      <view class="item main">
        <wxc-tab  bind:tabchange="onClick" default-index="{{0}}" component-id="circle" animate="{{true}}" active-text-color="#333333" text-color="#999999" active-line-color="#333333">
          <wxc-tab-panel component-id="circle" tab-index="0" label="推荐">
            <view class="exhibits circle"/>
          </wxc-tab-panel>
          <wxc-tab-panel component-id="circle" tab-index="1" label="最新">
            <view class="exhibits circle" style="background:#333366;"/>
          </wxc-tab-panel>
        </wxc-tab>
      </view>
    </wxc-flex>
  </view>