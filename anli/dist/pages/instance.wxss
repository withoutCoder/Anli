
  .wrap {
    display: block;
    background: #ffffff;
  }
  .item {
    font-size: 28rpx;
    line-height: 100%;
  }
  .side {
    width: 100%;
    background: #ffffff;
    text-align: center;
  }
  .main {
    background: #ffffff;
    flex-grow: 1;
  }
  .anli-item {
    color: #666666;
