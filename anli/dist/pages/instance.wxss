    border-radius: 20rpx;
    box-shadow: 0 0 4rpx #B9B9B9;
  }
  .instance-title {
    margin-top: 30rpx;
    margin-left: 35rpx;
    margin-right: 35rpx;
    font-size: 42rpx;
