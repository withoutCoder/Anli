
  .wrap {
    display: block;
    background: #ffffff;
  }
  .item {
    font-size: 28rpx;
    line-height: 100%;
  }
  .side {
    width: 100%;
    background: #ffffff;
    text-align: center;
  }
  .main {
    background: #ffffff;
    flex-grow: 1;
  }
  .from-image {
    width: 130rpx;
    height: 180rpx;
    background: #334433;
    margin-left: 30rpx;
    margin-bottom: 30rpx;
    margin-top: 30rpx;
    border-radius: 2rpx;
    box-shadow: 0 0 4rpx #666666;
  }
  .instance-desc {
    color: #999999;
    width: 90%;
    background: #ffffff;
    text-align: left;
    margin-left: 5%;
    margin-top: 20rpx;
    margin-bottom: 35rpx;
    border-radius: 20rpx;
    box-shadow: 0 0 4rpx #B9B9B9;
  }
  .from{
    color: #999999;
    width: 90%;
    background: #ffffff;
    text-align: left;
    margin-left: 5%;
    margin-bottom: 35rpx;
    border-radius: 20rpx;
    box-shadow: 0 0 4rpx #B9B9B9;
  }
  .circle{
    width: 90%;
    background: #f9f9f9;
    margin-left: 5%;
    border-radius: 20rpx;
    box-shadow: 0 0 5rpx #999999;
    height: 200rpx;
    margin-bottom: 20rpx;
    background-size: cover;
  }
  .instance-image {
    width: 158rpx;
    height: 220rpx;
    background: #334433;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    border-radius: 10rpx;
    box-shadow: 0 0 4rpx #333333;
  }
  .instance-title {
    max-width: 100%;
    margin-left: 30rpx;
    margin-top: 35rpx;
    letter-spacing: 2rpx;
    line-height: 34rpx;
    color: #666666;
    font-size: 32rpx;
  }
  .instance-text {
    width: 90%;
    margin-left: 35rpx;
    margin-top: 15rpx;
    letter-spacing: 2rpx;
    line-height: 34rpx;
    font-weight: 200;
    font-size: 22rpx;
    color: #999999
  }
  .title {
    max-width: 100%;
    margin-left: 35rpx;
    margin-top: 25rpx;
    margin-bottom: 20rpx;
    letter-spacing: 2rpx;
    line-height: 34rpx;
    color: #666666;
    font-size: 32rpx;
  }
  .text {
    width: 90%;
    margin-left: 5%;
    margin-bottom: 25rpx;
    letter-spacing: 2rpx;
    line-height: 34rpx;
    font-size: 28rpx;
    color: #666666;
  }
  .user-image-localtion {
    margin-left: 20rpx;
    margin-top: 20rpx;
    border-radius:40rpx;
    box-shadow:0 0 4rpx #bfbfbf;
    width: 70rpx;
    height: 70rpx;
  }
  .user-image {
    width: 70rpx;
    height: 70rpx;
    border-radius:40rpx;
    box-shadow:0 0 4rpx #bfbfbf;
  }
  .user-name {
    margin-top: 25rpx;
    margin-left: 25rpx;
    font-size: 28rpx;
    color: #666666;
  }
  .signature{
    width: 400rpx;
    margin-left: 25rpx;
    margin-top: 10rpx;
    letter-spacing: 2rpx;
    line-height: 34rpx;
    font-weight: 200;
    font-size: 22rpx;
    color: #999999;
  }
  .way{
    margin-left: 5%;
  }
  .comment {
    width: 86%;
    margin-top: 20rpx;
    margin-bottom: 5rpx;
    color: #666666;
    margin-left: 7%;
    letter-spacing: 2rpx;
    font-size: 28rpx;
  }
  .label {
    display: inline-block;
    line-height: 30rpx;
    padding: 0 0 0 0;
    margin-left: 15rpx;
  }
  .class-label {
    margin-top: 20rpx;
    margin-right: 20rpx;
  }
