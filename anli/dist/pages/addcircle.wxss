
  .page {
    margin: 30rpx;
    border-style: solid;
    border-width: 1rpx;
    border-color: #efefef;
  }
  .wrap {
    background: #FFFFFF;
    width: 100%;
    height: 100%;
    padding-top: 20rpx;
  }
  .container {
    width: 94%;
    margin-right: 20rpx;
    margin-left: 20rpx;
    border-radius: 8rpx;
    box-shadow: 0 0 4rpx #666666;
    background: #FFFFFF;
  }
  .textarea-wrap{
    width: 90%;
    padding: 20rpx;
    color: #999999;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    border-radius: 10rpx;
    background: #f9f9f9;
  }
  .submit-button {
    width: 60%;
    margin-left: 30%;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
  }
  .input-wrap {
    background: #FFFFFF;
  }
  .image-select {
    min-height: 100rpx;
    padding-top: 20rpx;
    text-align: center;
    padding-bottom: 20rpx;
  }
  .image-wrap {
    width: 240rpx;
  }
