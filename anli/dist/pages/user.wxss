
  .wrap {
    display: block;
    background: #ffffff;
  }
  .item {
    font-size: 28rpx;
    line-height: 100%;
    text-align: center;
  }
  .side {
    width: 100%;
    height: 350rpx;
    background: #ffffff;
    flex-grow: 0;
  }
  .main {
    background: #ffffff;
    flex-grow: 1;
  }
  .anli-item {
    width: 90%;
    background: #ffffff;
    text-align: left;
    margin-left: 5%;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    border-radius: 20rpx;
    box-shadow: 0 0 3rpx #B9B9B9;
  }
  .anli-image {
    width: 130rpx;
    height: 180rpx;
    background: #334433;
    margin-left: 30rpx;
    margin-bottom: 30rpx;
    margin-top: 30rpx;
    border-radius: 2rpx;
    box-shadow: 0 0 4rpx #666666;
  }
  .user-info {
    width: 98%;
    height: 96%;
    margin: 1%;
    margin-bottom: 2%;
  }
  .avatar {
    display: inline-block;
    width: 180rpx;
    height: 180rpx;
    margin-top: 20rpx;
  }
  .layout {
    display: block;
    width: 100%;
  }
  .user-pic {
    width: 200rpx;
    height: 200rpx;
    margin: 15rpx;
    border-radius: 100%;
    box-shadow: 0 0 5rpx #333333;
  }
  .user-name {
    text-align: center;
    color: #666666;
  }
  .label-list {
    text-align: center;
    margin-top: 15rpx;
  }
  .label {
    margin-left: 15rpx;
  }
  .tool {
    width: 90%;
    background: #ffffff;
    margin-left: 20rpx;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
  }
  .card {
    width: 90%;
    background: #ffffff;
    text-align: left;
    margin-left: 5%;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    border-radius: 20rpx;
    box-shadow: 0 0 3rpx #B9B9B9;
  }
  .exhibits:active{
    box-shadow: 0 0 4rpx #bfbfbf;
  }
  .card-image {
    width: 130rpx;
    height: 180rpx;
    background: #334433;
    margin-left: 30rpx;
    margin-bottom: 30rpx;
    margin-top: 30rpx;
    border-radius: 2rpx;
    box-shadow: 0 0 4rpx #666666;
  }
  .question {
    margin-left: 30rpx;
    margin-top: 20rpx;
    color: #ffffff;
  }
  .circle-pic{
    width: 90%;
    background: #f9f9f9;
    margin-left: 5%;
    border-radius: 20rpx;
    box-shadow: 0 0 5rpx #999999;
    height: 300rpx;
    margin-bottom: 20rpx;
    background-size: cover;
  }
  .class-label {
    margin-top: 20rpx;
    margin-right: 20rpx;
  }
  .title {
    max-width: 100%;
    margin-left: 30rpx;
    margin-top: 35rpx;
    letter-spacing: 2rpx;
    line-height: 34rpx;
    color: #666666;
    font-size: 32rpx;
  }
  .text {
    width: 90%;
    margin-left: 35rpx;
    margin-top: 15rpx;
    letter-spacing: 2rpx;
    line-height: 34rpx;
    font-weight: 200;
    font-size: 22rpx;
    color: #999999;
  }
  .top {
    width: 500rpx;
  }
  .bottom {
    width: 100%;
    margin-top: 50rpx;
  }
  .button-class {
    display: flex;
    justify-content: center;
    width: 100%;
  }
  .number {
    margin-left: 5rpx;
    font-size:20rpx;
    color: #999999;
  }
